@model IEnumerable<NinjaDomain.Classes.Topic>

@{
    ViewBag.Title = "Topics";
}

<h2>Topics</h2>

<p>
    @Html.ActionLink("Create New Topic", "CreateTopic")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.TopicId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TopicId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated, "{0:d}")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateModified, "{0:d}")
        </td>
        <td>
            @Html.ActionLink("Edit", "EditTopic", new { Topic=item.Id }) |
            @Html.ActionLink("Delete", "DeleteTopic", new { id=item.Id })
        </td>
    </tr>
}

</table>
